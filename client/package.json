{
  "name": "conquerors-domination-demo",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "electron": "unset ELECTRON_RUN_AS_NODE && electron electron/main.cjs",
    "electron:dev": "concurrently -k \"npm run dev\" \"wait-on tcp:5173 && unset ELECTRON_RUN_AS_NODE && NODE_ENV=development electron electron/main.cjs\"",
    "build": "tsc -b && vite build",
    "dist": "npm run build && npm run build-server && electron-builder",
    "test:smoke": "playwright test",
    "build-server": "cd ../server && npm run build && cd ../client && mkdir -p server && cp -r ../server/dist server/",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "build": {
    "appId": "com.conquerors.domination.demo",
    "productName": "ConquerorsDominationDemo",
    "directories": {
      "output": "dist_electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "server/dist/**/*",
      "package.json",
      "steam_appid.txt"
    ],
    "mac": {
      "target": "dir",
      "category": "public.app-category.strategy-games",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "win": {
      "target": "dir"
    },
    "linux": {
      "target": "dir"
    }
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^5.2.1",
    "localtunnel": "^2.0.2",
    "phaser": "^3.90.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "socket.io": "^4.8.3",
    "socket.io-client": "^4.8.3",
    "steamworks.js": "^0.4.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.49.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "concurrently": "^9.2.1",
    "electron": "^40.5.0",
    "electron-builder": "^26.7.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4",
    "wait-on": "^9.0.3"
  }
}